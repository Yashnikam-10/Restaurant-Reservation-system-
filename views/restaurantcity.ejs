<%- include("partials/header") %>

  <header>

    <!-- Displays current city -->
    <h1 class="restaurant-title ">
      <%= city %>
    </h1>

    <div class="container restaurant-container">
      <main class="grid">
        <% restaurants.forEach(function(restaurant) { %>
          <article>
            <img alt="city-image" src="/images/restaurant-default.jpg" class="left">
            <div class="text">
              <h2 class="restaurant-name text-start"><%= restaurant.name %></h2>
              <div>
                <button onclick="window.location.href='/restaurantpage/<%= restaurant.name %>'" type="button"
                  class="btn btn-primary btn-lg col-4 book-button">Book Table</button>
              </div>
              <h4 class="restaurant-address"><%= restaurant.address %> , <%= restaurant.phone %></h4><br />

              <div>
                <h7 style="color:white;" class="bg-success"><%= restaurant.costfor %></h7>
              </div>

              <div>
                <i class="fas fa-clock "></i>
                <span>Open from: <%= restaurant.openFrom %> - <%= restaurant.openTill %></span>
                <i style="padding-left: 2%;" class="fas fa-location-arrow"></i>
                <a href="/restaurantpage/<%= restaurant.name%>#address"><span style="color:black">View Location</span></a>
                <br>
                <i class="fas fa-star icon-rating"></i>
                <span><%= restaurant.ratings %></span>
                <i style="padding-left: 5.5%;" class="fas fa-book-reader"></i>
                <a href="/restaurantpage/<%= restaurant.name%>#about"><span style="color:black">See Menu</span></a>
              </div>
            </div>
          </article>
        <% }) %>

